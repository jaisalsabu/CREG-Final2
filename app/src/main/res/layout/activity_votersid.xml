<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView4"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    tools:context=".Votersid">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="277dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="67dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="67dp"
        android:fontFamily="sans-serif-bold"
        android:text="Voters Id"
        android:textColor="@color/colorPrimary"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="82dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="43dp"
        android:fontFamily="sans-serif-thin"
        android:padding="8dp"
        android:text="Application form"
        android:textColor="#797777"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/bc_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />


    <EditText
        android:id="@+id/bc_name"
        android:layout_width="264dp"
        android:layout_height="57dp"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/edttxt"
        android:ems="10"
        android:hint="  Name of Voter(Full Name)"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/bc_place"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/bc_place"
        android:layout_width="267dp"
        android:layout_height="55dp"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="33dp"
        android:background="@drawable/edttxt"
        android:ems="10"
        android:hint="  Father/Husband's Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/bc_dob"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/bc_dob"
        android:layout_width="258dp"
        android:layout_height="56dp"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/edttxt"
        android:ems="10"
        android:focusable="false"
        android:hint="  Date of Birth(DD-MM-YYYY)"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/gender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/sex1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="429dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="1328dp"
        android:text="SEX"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/gender"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/gender"
        android:layout_width="265dp"
        android:layout_height="68dp"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/edttxt"
        app:layout_constraintBottom_toTopOf="@+id/bc_fathername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/bc_fathername"
        android:layout_width="261dp"
        android:layout_height="63dp"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="55dp"
        android:background="@drawable/edttxt"
        android:ems="10"
        android:hint="  Address"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/bc_apply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.613"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/bc_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="154dp"
        android:layout_marginEnd="169dp"
        android:layout_marginBottom="57dp"
        android:background="@drawable/btn"
        android:text="Apply"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/bc_pdfdwn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bc_pdfdwn"
        android:layout_width="253dp"
        android:layout_height="53dp"
        android:layout_marginStart="71dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="287dp"
        android:background="@drawable/b"
        android:text="Download Token"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
</ScrollView>