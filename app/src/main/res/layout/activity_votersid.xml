<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView4"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    tools:context=".Votersid">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="722dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-bold"
            android:text="Voters Id"
            android:textColor="@color/colorPrimary"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-thin"
            android:padding="8dp"
            android:text="Application form"
            android:textColor="#797777"
            android:textSize="28sp" />


        <EditText
            android:id="@+id/bc_name"
            android:layout_width="264dp"
            android:layout_height="57dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edttxt"
            android:ems="10"
            android:hint="  Name of Voter(Full Name)"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/bc_place"
            android:layout_width="267dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edttxt"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:hint="  Father/Husband's Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/bc_dob"
            android:layout_width="258dp"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edttxt"
            android:ems="10"
            android:layout_gravity="center_horizontal"
            android:focusable="false"
            android:hint="  Date of Birth(DD-MM-YYYY)"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/sex1"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="SEX"
            android:textColor="#000000"
            android:textSize="16sp"
            />

        <Spinner
            android:id="@+id/gender"
            android:layout_width="265dp"
            android:layout_height="68dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edttxt" />

        <EditText
            android:id="@+id/bc_fathername"
            android:layout_width="261dp"
            android:layout_height="63dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edttxt"
            android:ems="10"
            android:layout_gravity="center_horizontal"
            android:hint="  Address"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/bc_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn"
            android:text="Apply"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/bc_pdfdwn"
            android:layout_width="253dp"
            android:layout_height="53dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/b"
            android:text="Download Token"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
</ScrollView>