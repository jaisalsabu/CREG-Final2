<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    tools:context=".BirthCertficate">

    <LinearLayout
        android:layout_width="427dp"
        android:layout_height="774dp"
        android:layout_marginEnd="3dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="277dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif-bold"
            android:text="Birth Certificate"
            android:textColor="@color/colorPrimary"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-thin"
            android:padding="20dp"
            android:text="Application form"
            android:textColor="#797777"
            android:textSize="28sp" />

        <EditText
            android:id="@+id/bc_name"
            android:layout_width="264dp"
            android:layout_height="57dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/edttxt"
            android:ems="10"
            android:hint="  Name of child(Full Name)"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/bc_place"
            android:layout_width="267dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/edttxt"
            android:ems="10"
            android:hint="  Place of Birth"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/bc_dob"
            android:layout_width="258dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/edttxt"
            android:ems="10"
            android:focusable="false"
            android:hint="  Date of Birth(DD-MM-YYYY)"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/sex2"
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif"
            android:text="SEX"
            android:textColor="#948E8E"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/gender"
            android:layout_width="268dp"
            android:layout_height="57dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/edttxt" />

        <EditText
            android:id="@+id/bc_fathername"
            android:layout_width="265dp"
            android:layout_height="59dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/edttxt"
            android:ems="10"
            android:hint="  Name of Father"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/bc_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn"
            android:text="Apply"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/bc_pdfdwn"
            android:layout_width="253dp"
            android:layout_height="53dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/b"
            android:text="Get Trackid"
            android:textColor="#ffffff" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
</ScrollView>